@model AddItemToMyFoodVM
@{
    ViewBag.Title = "Add new item";
}

<h3 class="display-5">Add Item</h3>

<form asp-controller="eSpensa" class="text-left">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodGroup"></label>
        <select asp-for="FoodGroup" asp-items="Html.GetEnumSelectList<FoodGroupEnum>()" class="form-control">
            <option selected="selected" value="">Select food group</option>
        </select>
    </div>
    <div class="form-group date">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" />
        <span asp-validation-for="ExpirationDate">
        </span>
    </div>
    <div class="form-check">
        <input asp-for="GoesInTheFridge" type="checkbox" class="form-check-input" />
        <label asp-for="GoesInTheFridge"></label>
    </div>
    <br/>
    <button asp-action="AddItemToMyFood" class="btn btn-primary">Add</button>
    <div asp-validation-summary="All"></div>
</form>

@section scriptsJq
    {
    @*<script src="/jquery/jquery.min.js"></script>*@
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}